<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Temperature">
        <ListPreference
            app:defaultValue="Celsius"
            app:entries="@array/temperatureUnits"
            app:entryValues="@array/temperatureUnits"
            app:key="temperatureUnit"
            app:title="Temperature Unit"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Pressure">
        <ListPreference
            app:defaultValue="Pa"
            app:entries="@array/pressureUnits"
            app:entryValues="@array/pressureUnits"
            app:key="pressureUnit"
            app:title="Pressure Unit"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Speed">
        <ListPreference
            app:defaultValue="metresPerSecond"
            app:entries="@array/speedUnits"
            app:entryValues="@array/speedUnitValues"
            app:key="speedUnit"
            app:title="Speed Unit"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>